require "std_prod.pil";

const string name_permutation = "permutation";

function permutation_assumes(const int opid, const expr sel = 1, const expr cols[]) {
    prod_assumes(name_permutation, opid, sel, cols);
}

function permutation_proves(const int opid, const expr sel = 1, const expr cols[]) {
    prod_proves(name_permutation, opid, sel, cols);
}

function permutation_proves_upcd(const int opid, const expr cols[]) {
    prod_proves(name_permutation, opid, 1, cols, 1);
}
