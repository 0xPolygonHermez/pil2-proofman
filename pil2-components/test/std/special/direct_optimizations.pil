require "std_direct.pil"

sum_set_airvals_im_non_reduced(3);
sum_set_airvals_im_reduce_factor(3);

public inputs[64];

airtemplate Direct(const int N = 2**2) {
    airval inputs_air[64];
    for (int i = 0; i < 3; i++) {
        direct_update_assumes(0xAA, [i, inputs_air[i*2], inputs_air[i*2 + 1]]);
    }
}


airgroup Direct {
    Direct();

    for (int i = 0; i < 3; i++) {
        direct_global_update_proves(0xAA, [i, inputs[i*2], inputs[i*2 + 1]]);
    }
}