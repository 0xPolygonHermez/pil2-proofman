require "std_connection.pil";
require "connection_fixed.pil";

subproof aggregate Connection1(2**12, 2**13) {

    col witness a,b,c;

    col fixed S1,S2,S3;
    if (N == 2**12) {
        S1 = GROUP12;
        S2 = GROUP12;
        S3 = GROUP12;
    } else if (N == 2**13) {
        S1 = GROUP13;
        S2 = GROUP13;
        S3 = GROUP13;
    } else {
        error(`Unsupported N = ${N}`);
    }

    // PIL1 Interface
    connection(1, [a, b, c], [S1, S2, S3]);
};

subproof aggregate Connection2(2**4) {

    col witness a,b,c;

    connection_init(2, [a, b, c]);
    connection_update_one_cell(2, [c], [3], [a], [5], 2**4);
    connection_connect(2);
};