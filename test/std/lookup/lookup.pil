require "std_lookup.pil";

airtemplate Lookup0(const int N = 2**10, const int nLookups) {

    col witness f[2*nLookups];
    col witness t[2*nLookups];
    col witness sel[nLookups];
    col witness mul[nLookups];

    for (int i = 0; i < nLookups; i++) {
        lookup_assumes(i, [f[2*i], f[2*i+1]], sel[i]);
        lookup_proves(i, [t[2*i], t[2*i+1]], mul[i]);
    }
}

airtemplate Lookup1(const int N = 2**12) {

    col witness a1,b1,a2,b2,a3,b3,a4,b4;
    col witness c1,d1,c2,d2;
    col witness sel1,sel2;
    col witness mul;

    lookup_assumes(1, [a1, b1]);
    lookup_proves(1, [c1, d1]);

    lookup_assumes(2, [a2, b2]);

    lookup_assumes(3, [a3, b3], sel1);
    lookup_proves(3, [c2, d2], mul);

    lookup_assumes(4, [a4, b4], sel2);
};

airtemplate Lookup2(const int N = 2**14) {

    col witness c1,d1,c2,d2;
    col witness mul;

    lookup_proves(2, [c1, d1]);

    lookup_proves(4, [c2, d2], mul);
};

airgroup Lookup {
    Lookup0(nLookups: 8);

