require "std_permutation.pil";

air aggregate Permutation1(const int N = 2**12) {

    col witness a1,b1,a2,b2,a3,b3,a4,b4;
    col witness c1,d1,c2,d2;
    col witness sel1,sel2,sel3;

    permutation_assumes(1, cols: [a1, b1]);
    permutation_proves(1, cols: [c1, d1]);

    permutation_assumes(2, cols: [a2, b2]);

    permutation_assumes(3, sel1, [a3, b3]);
    permutation_proves(3, sel2, [c2, d2]);

    permutation_assumes(4, sel3, [a4, b4]);
};

air aggregate Permutation2(const int N = 2**14) {

    col witness c1,d1,c2,d2;
    col witness sel;

    permutation_proves(2, cols: [c1, d1]);

    permutation_proves(4, sel, [c2, d2]);
};

Permutation1();
Permutation1(N: 2**13);
Permutation1(N: 2**15);
Permutation2();