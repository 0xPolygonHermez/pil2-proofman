require "std_range_check.pil";

const int MODULE_ID = 1;

public mod;

air Module(const int N = 2**8) {

    col fixed LN = [0...,1];
    col witness x, q, x_mod;

    x === q * mod + x_mod;

    // NOTE: Mod should be limited to 2**16 by the verifier

    // Ensure that 0 <= x_mod < mod < PRIME <--> 0 < mod - x_mod
    range_check(colu: mod - x_mod, min: 1, max: 2**8-1);

    permutation_proves(MODULE_ID, 1 - LN, [x, x_mod]);
}