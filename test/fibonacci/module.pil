require "std_permutation.pil";
require "std_range_check.pil";

const int MODULE_ID = 1;

public mod;

subproof Module(2**16) {

    col witness x, q, x_mod;

    x === q * mod + x_mod;

    // Ensure that x_mod < mod <--> 0 < mod - x_mod
    range_check_nosel(0, mod - x_mod, 1, N);

    permutation_proves_nosel(MODULE_ID, [x, x_mod]);
}